FROM armv7/armhf-ubuntu

COPY scripts/build/qemu-user-static/usr/bin/qemu-arm-static /usr/bin/qemu-arm-static

RUN apt-get update

RUN apt-get update && apt-get install -y \
                build-essential \
                protobuf-c-compiler \
                libprotobuf-c0-dev \
                libprotobuf-dev \
                bsdmainutils \
                protobuf-compiler \
                python-minimal \
                libaio-dev \
                iptables \
                libnl-3-dev

COPY . /criu
WORKDIR /criu

RUN make clean && make -j $(nproc)
